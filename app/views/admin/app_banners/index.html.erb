<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">App Banners</h2>
      </div>
      <div class="new" style="margin-bottom: 15px;">
        <%= link_to "New App Banner", new_admin_app_banner_path, class: "btn btn-primary" %>
      </div>
      <% if @appBanners.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Image Url</th>
              <th>Action Url</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @appBanners.each do |banner| %>
              <tr>
                <td><%= banner.id %></td>
                <td><%= banner.imgUrl[0,60] + "..." %></td>
                <td><%= banner.actionUrl %></td>
                <td>
                  <% if banner.status == false %>
                    <p>❌</p>
                  <% else %>
                    <p>✔️</p>
                  <% end %>
                </td>
                <td><%= banner.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= banner.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td>
                  <%= link_to 'Show', admin_app_banner_path(banner) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
         <%= will_paginate @appBanners %>
      <% else %>
        <h1 class="not-found">No App Banners Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
