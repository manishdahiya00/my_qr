<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Favourites</h2>
      </div>
      <% if @favourites.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Qr Id</th>
              <th>Device Id</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @favourites.each do |fav| %>
              <tr>
                <td><%= fav.id %></td>
                <td>Device Detail <%= fav.device_detail_id %></td>
                <td><%= fav.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td><%= fav.updated_at.strftime("%d/%m/%y %I:%M %p") %></td>
                <td>
                  <%= link_to 'Show', admin_favourite_path(fav) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @favourites %>
      <% else %>
        <h1 class="not-found">No Qr Favourite Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
