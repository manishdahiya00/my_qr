<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">User Details</h2>
          <%= link_to 'Back', admin_user_details_path, class: "btn btn-primary", style: "margin-bottom: 15px;" %></b>
      </div>
      
      <!-- User Details Table -->
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Device Id</th>
            <th>Device Type</th>
            <th>Device Name</th>
            <th>Social Type</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @userDetail.id %></td>
            <td><%= @userDetail.deviceId %></td>
            <td><%= @userDetail.deviceType %></td>
            <td><%= @userDetail.deviceName %></td>
            <td><%= @userDetail.socialType %></td>
          </tr>
        </tbody>
      </table>

      <!-- Additional User Information Table -->
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>Social Id</th>
            <th>Social Name</th>
            <th>Social Email</th>
            <th>Social Image Url</th>
            <th>Ref Code</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @userDetail.socialId %></td>
            <td><%= @userDetail.socialName %></td>
            <td><%= @userDetail.socialEmail %></td>
            <td>
              <% if @userDetail.socialImgUrl.present? %>
                <a href="<%= @userDetail.socialImgUrl %>"><%= @userDetail.socialImgUrl[0, 50] + "..." %></a>
              <% end %>
            </td>
            <td><%= @userDetail.refCode %></td>
          </tr>
        </tbody>
      </table>

      
      <!-- User Redeems Table -->
      <h3>User Redeems</h3>
      <% if @redeems.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Mobile Number</th>
              <th>Coins</th>
              <th>Amount</th>
              <th>Pay Type</th>
              <th>Status</th>
              <th>Pay Vendor</th>
              <th>Trans Vendor</th>
              <th>Pay Id</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @redeems.each do |redeem| %>
              <tr>
                <td><%= redeem.id %></td>
                <td><%= redeem.mobileNumber %></td>
                <td><%= redeem.payCoins %></td>
                <td><%= redeem.payAmount %></td>
                <td><%= redeem.payType %></td>
                <td>
                  <% if redeem.status == "PENDING" %>
                    <p class="text-danger"><%= redeem.status %></p>
                  <% elsif redeem.status == "PROCESSING" %>
                    <p class="text-warning"><%= redeem.status %></p>
                  <% else %>
                    <p class="text-success"><%= redeem.status %></p>
                  <% end %>
                </td>
                <td><%= redeem.payVendor %></td>
                <td><%= redeem.transVendor %></td>
                <td><%= redeem.payId %></td>
                <td ><a href="/admin/redeems/<%= redeem.id %>/edit"><button class="btn btn-primary">Edit</button></a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No user redeems found.</p>
      <% end %>
      
      <!-- User Transaction History Table -->
      <h3>User Transaction History</h3>
      <% if @transactionHistories.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Subtitle</th>
              <th>Coins</th>
            </tr>
          </thead>
          <tbody>
            <% @transactionHistories.each do |history| %>
              <tr>
                <td><%= history.id %></td>
                <td><%= history.title %></td>
                <td><%= history.subtitle %></td>
                <td><%= history.coins %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No user transaction history found.</p>
      <% end %>
      
    </div>
  </div>
</div>
