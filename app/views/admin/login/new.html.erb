<style>
    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-horizontal {
  width: 50%;
}

.mb-5 {
  margin-bottom: 2.5rem;
}

.fs-5 {
  font-size: 1.25rem;
}

.fw-medium {
  font-weight: 500;
}

.form-group {
  margin-bottom: 1rem;
}

.form-control {
  width: 100%;
  padding: 0.5rem;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 0.25rem;
}

.btn {
  display: inline-block;
  padding: 0.5rem 1rem;
  font-size: 1rem;
  border: none;
  border-radius: 0.25rem;
  cursor: pointer;
}

.btn-dark {
  background-color: #343a40;
  color: #fff;
}

.btn-dark:hover {
  background-color: #23272b;
}

.alert {
  padding: 0.75rem 1.25rem;
  margin-bottom: 1rem;
  border: 1px solid transparent;
  border-radius: 0.25rem;
}

.alert-danger {
  color: #721c24;
  background-color: #f8d7da;
  border-color: #f5c6cb;
}
    </style>


<div class="container d-flex justify-content-center align-items-center" style="height:100vh">
  <%= form_with(url: admin_path, method: :post, class: "form-horizontal w-50") do %>
  <div>
    <div>
      <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
      <% end %>
      <h1 class="mb-5">Log In</h1>
      <div class="form-group p-2">
        <%= label_tag :username, "Username", class: "control-label fs-5 fw-medium" %>
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= label_tag :password, "Password", class: "control-label fs-5 fw-medium" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <div class="col-sm-offset-2 col-sm-10 m-2">
        <%= submit_tag "Log In", class: "btn btn-dark text-light w-75 fw-medium" %>
      </div>
    </div>
  </div>
<% end %>
</div>