<div class="container">
  <%= form_with(model: @redeem, url: admin_redeem_path(@redeem), method: :patch) do |form| %>
  <% if @redeem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@redeem.errors.count, "error") %> prohibited this redeem from being saved:</h2>

      <ul>
        <% @redeem.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Redeem Form Elements
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                <label>Mobile Number</label>
                <%= form.text_field :mobileNumber, class: "form-control", placeholder: "Enter mobile number",disabled: true%>
              </div>
              <div class="form-group">
                <label>Coins</label>
                <%= form.text_field :payCoins, class: "form-control", placeholder: "Enter coins",disabled: true %>
              </div>
              <div class="form-group">
                <label>Amount</label>
                <%= form.text_field :payAmount, class: "form-control", placeholder: "Enter amount",disabled: true %>
              </div>
              <div class="form-group">
                <label>Pay Type</label>
                <%= form.text_field :payType, class: "form-control", placeholder: "Enter pay type" %>
              </div>
              <div class="form-group">
                <label>Status</label>
                <%= form.select :status, options_for_select(['PENDING', 'PROCESSING', 'COMPLETED'], @redeem.status), class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                <label>Pay Vendor</label>
                <%= form.text_field :payVendor, class: "form-control", placeholder: "Enter pay vendor"%>
              </div>
              <div class="form-group">
                <label>Trans Vendor</label>
                <%= form.text_field :transVendor, class: "form-control", placeholder: "Enter trans vendor" %>
              </div>
              <div class="form-group">
                <label>Pay ID</label>
                <%= form.text_field :payId, class: "form-control", placeholder: "Enter pay ID",disabled: true %>
              </div>
              <div class="form-group">
                <%= form.submit "Update Redeem", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

</div>