<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Redeem History</h2>
      </div>
      <% if @redeems.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Pay Amont</th>
              <th>Pay Coins</th>
              <th>Mobile Number</th>
              <th>User Detail</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @redeems.each do |redeem| %>
              <tr>
                <td><%= redeem.id %></td>
                <td><%= redeem.payAmount %></td>
                <td><%= redeem.payCoins %></td>
                <td><%= redeem.mobileNumber %></td>
                <td>User Detail <%= redeem.user_detail_id %></td>
                <td>
                  <% if redeem.status == "PENDING" %>
                    <p class="text-danger"><%= redeem.status %></p>
                  <% elsif redeem.status == "PROCESSING" %>
                    <p class="text-warning"><%= redeem.status %></p>
                  <% else %>
                    <p class="text-success"><%= redeem.status %></p>
                  <% end %>
                </td>
                <td><%= redeem.created_at %></td>
                <td><%= redeem.updated_at %></td>
                <td ><a href="/admin/redeems/<%= redeem.id %>/edit"><button class="btn btn-primary">Edit</button></a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @qrData %>
      <% else %>
        <h1 class="not-found">No Redeem History Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
