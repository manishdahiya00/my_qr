<style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f4f4f9;
}

header {
    background-color: #ffffff;
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
}

header .logo {
    display: flex;
    align-items: center;
}

header .logo img {
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

header .logo h1 {
    font-size: 32px;
    margin: 0;
}

main {
    padding: 20px;
}

.span{
    color: #2a9d8f;
}


section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding: 20px;
    border-radius: 10px;
    background-color: #ffffff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

.text-content, .image-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.text-content h2 {
    font-size: 100px;
    color: #2a9d8f;
    margin: 0;
    text-align: center;
}

.text-content h2 span {
    color: #000000;
}

.text-content p {
    line-height: 1.5;
    letter-spacing: 0.5px;
    font-size: 24px;
    color: #555555;
    text-align: center;
    max-width: 600px;
}

.img1, .img2 {
    width: 100%;
    border-radius: 10px;
    height: auto;
}

footer {
    background-color: #000000;
    color: #ffffff;
    text-align: center;
    padding: 10px;
}

footer p {
    font-size: 22px;
}

.a-btn {
    text-decoration: none;
    background-color: #2a9d8f;
    padding: 10px 20px;
    border-radius: 2px;
    color: white;
    font-size: 22px;
    margin-top: 20px;
}

a {
    text-decoration: underline;
    color: white;
    font-size: 22px;
}

/* Responsive Styles */
@media (max-width: 1200px) {
    .text-content h2 {
        font-size: 80px;
    }

    .text-content p {
        font-size: 20px;
    }

    .a-btn {
        font-size: 20px;
        padding: 8px 16px;
    }

    .img1, .img2 {
        height: 70vh;
    }
}

@media (max-width: 992px) {
    section {
        flex-direction: column;
        text-align: center;
        height: auto;
    }

    .text-content h2 {
        font-size: 60px;
    }

    .text-content p {
        font-size: 18px;
    }

    .a-btn {
        font-size: 18px;
        padding: 6px 12px;
    }

    .img1, .img2 {
        width: 100%;
        height: auto;
    }
}

@media (max-width: 768px) {
    header .logo h1 {
        font-size: 24px;
    }

    .text-content h2 {
        font-size: 50px;
    }

    .text-content p {
        font-size: 16px;
    }

    .a-btn {
        font-size: 16px;
        padding: 5px 10px;
    }

    footer p {
        font-size: 18px;
    }

    .img1, .img2 {
        width: 100%;
        height: auto;
    }
}

@media (max-width: 576px) {
    header .logo img {
        width: 30px;
        height: 30px;
    }

    header .logo h1 {
        font-size: 20px;
    }

    .text-content h2 {
        font-size: 40px;
    }

    .text-content p {
        font-size: 14px;
    }

    .a-btn {
        font-size: 14px;
        padding: 4px 8px;
    }

    footer p {
        font-size: 16px;
    }

    .img1, .img2 {
        width: 100%;
        height: auto;
    }
}
</style>

